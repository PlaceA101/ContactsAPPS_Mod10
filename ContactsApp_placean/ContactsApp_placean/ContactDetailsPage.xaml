<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ContactsApp_placean.ContactDetailsPage"
             Title="Contact Details">
    <ScrollView>
        <StackLayout Padding="20" Spacing="20">
            <Image x:Name="PhotoImage" WidthRequest="200" HeightRequest="200" HorizontalOptions="Center"/>
            <Label x:Name="NameLabel" FontSize="24" FontAttributes="Bold"/>
            <Label x:Name="EmailLabel" />
            <Label x:Name="PhoneLabel" />
            <Label x:Name="DescriptionLabel" />
            <Button Text="Back" Clicked="OnBackClicked"/>
        </StackLayout>
    </ScrollView>
</ContentPage>